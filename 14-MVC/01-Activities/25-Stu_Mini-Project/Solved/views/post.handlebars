<article class="card">
  <h2>{{post.title}}</h2>
  <p class="meta">By {{post.user.name}} • {{format_date post.date_created}}</p>
  <p>{{post.content}}</p>
</article>

<section class="card" style="margin-top:14px;">
  <h2>Comments</h2>

  {{#each post.comments}}
    <div class="card" style="margin-top:10px;">
      <p>{{body}}</p>
      <p class="meta">— {{user.name}} • {{format_date date_created}}</p>
    </div>
  {{/each}}

  {{#unless post.comments.length}}
    <p class="meta">No comments yet.</p>
  {{/unless}}
</section>

{{#if logged_in}}
  <section class="card" style="margin-top:14px;">
    <h2>Add a comment</h2>
    <form class="comment-form">
      <input type="hidden" id="post-id" value="{{post.id}}" />
      <label for="comment-body">Comment</label>
      <textarea id="comment-body" rows="3"></textarea>
      <div style="margin-top:10px;">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </section>
  <script src="/js/comment.js"></script>
{{else}}
  <p class="meta" style="margin-top:12px;">Log in to leave a comment.</p>
{{/if}}